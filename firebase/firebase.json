{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": [
    {
      "target": "apex",
      "public": "public",
      "headers": [
        {
          "source": "**/*.*.@(js|css|woff2|svg)",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "max-age=31536000"
            }
          ]
        }
      ],
      "redirects": [
        {
          "source": "/evy-2401.pdf",
          "destination": "https://raw.githubusercontent.com/evylang/evy/v0.1.25/docs/papers/evy-2401.pdf",
          "type": 301
        }
      ],
      "rewrites": [
        {
          "source": "/version",
          "destination": "/version.json"
        }
      ]
    },
    {
      "target": "ai",
      "public": "public/ai"
    },
    {
      "target": "discord",
      "public": "public/discord"
    },
    {
      "target": "docs",
      "public": "public/docs"
    },
    {
      "target": "learn",
      "public": "public/learn"
    },
    {
      "target": "play",
      "public": "public/play",
      "rewrites": [
        {
          "source": "/version",
          "destination": "/version.json"
        }
      ]
    }
  ],
  "emulators": {
    "auth": {
      "port": 9099
    },
    "firestore": {
      "port": 8080
    },
    "hosting": {
      "port": 5000
    },
    "ui": {
      "enabled": true
    }
  }
}
